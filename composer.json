{
    "name": "renoki-co/thunder",
    "description": "Thunder is an advanced Laravel Spark addon that makes your billing app feel more like it's on steroids. âš¡",
    "keywords": ["laravel", "php", "spark", "billing", "thunder", "saas", "stripe", "cashier", "paddle"],
    "license": "Apache-2.0",
    "homepage": "https://github.com/renoki-co/thunder",
    "authors": [
        {
            "name": "Alex Renoki",
            "homepage": "https://github.com/rennokki",
            "role": "Developer"
        }
    ],
    "require": {
        "laravel/framework": "^7.40|^8.60"
    },
    "autoload": {
        "psr-4": {
            "RenokiCo\\Thunder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RenokiCo\\Thunder\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "suggest": {
        "doctrine/dbal": "Required by Thunder to modify tables in the database.",
        "laravel/spark-stripe": "Required in case you are using Stripe.",
        "laravel/spark-paddle": "Required in case you are using Paddle."
    },
    "require-dev": {
        "laravel/legacy-factories": "^1.1",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.22",
        "orchestra/database": "^6.0",
        "vimeo/psalm": "4.12.0"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "extra": {
        "laravel": {
            "providers": [
                "RenokiCo\\Thunder\\ThunderServiceProvider"
            ]
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:renoki-co/spark-paddle.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:renoki-co/spark-stripe.git"
        }
    ]
}
